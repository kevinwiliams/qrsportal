    $(function () {
        // Event listener for modal open event
        $('#disputeDrawModal').on('shown.bs.modal', function () {
            $('#disputePublicationDate').val($('#publicationDate').val());
            $('#disputeDrawAmount').val($('#drawAmount').val());
        });


    });

</script>